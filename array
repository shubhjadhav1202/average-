#include <iostream>
using namespace std;

int main() {
    int n,i,a;
    double sum=0,avg;

    cout << "enter no of elements: ";
    cin >> n;
    cout << n;
    int arr[n];

    cout << "\nenter " << n << " numbers: ";
    for(i=0;i<n;i++)
        {
            cin >> arr[i];
            cout << "\n" << arr[i];
            sum += arr[i];
        }

    avg = sum/n;
    cout << "\navg of " << n << " numbers:" << avg;
    
    return 0;
}
